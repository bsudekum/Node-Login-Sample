<div class='container'>
	<h3>Users</h3>
	<table class='table'>
		<tr>
			<th>Id</th>
			<th>username</th>
			<th>email address:</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% _.each(users, function(user) { %>
			
			<tr data-id="<% user.id %>" data-model="user">
				<td><%= user.id %></td>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<% if(user.admin){ %>
					<td><span class="glyphicon glyphicon-star"></span></td>
				<% } else { %>
					<td><span class="glyphicon glyphicon-remove"></span></td>
				<% } %>
				<td><a href='/user/show/<%= user.id %>' class="btn btn-default btn-sm">show</a></td>
				<td><a href='/user/edit/<%= user.id %>' class="btn btn-default btn-sm">edit</a></td>

				<td>
					<form action='/user/destroy/<%= user.id %>' method='POST'>
						<input type='hidden' name='_method' value='delete'/>
						<input type='submit' class='btn btn-default btn-sm' value='Delete'/>
					</form>
				</td>
			</tr>


		<% }) %>

	</table>
</div>
